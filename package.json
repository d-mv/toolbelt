    "husky": "8.0.3",
    "jest": "29.4.0",
    "jest-watch-typeahead": "2.2.2",
    "npm-run-all": "4.1.5",
    "prettier": "2.8.3",
    "ts-jest": "29.0.5",
    "ts-node-dev": "2.0.0",
    "typescript": "4.9.4"
